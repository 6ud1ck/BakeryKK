<Page x:Class="BakeryKK.Pages.EditProd.AddEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BakeryKK.Pages.EditProd"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="400"
      Title="AddEdit"
      Background="White">

    <Grid>
        <StackPanel>
            <Label Content="Добавление товара"
                   HorizontalAlignment="Center"
                   FontSize="25"/>
            <Border BorderBrush="Gray"
                    BorderThickness="1"
                    Width="300"
                    Height="300">
                <Image x:Name="ImgProduct"/>
                
            </Border>
            <Button Content="Выбор товара"
                    Width="300"
                    Height="40"
                    Margin="10"/>
            
                    
            
            
        </StackPanel>
    </Grid>
</Page>
