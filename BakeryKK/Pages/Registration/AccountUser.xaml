<Page x:Class="BakeryKK.Pages.Registration.AccountUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BakeryKK.Pages.Registration"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AccountUser"
      Background="White">

    <Grid>
        <Label HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0 10 0 0"
               Content="Регистрация"
               FontSize="30"/>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="400">
            <TextBlock Text="Логин"
                       FontSize="15"/>
            <TextBox Margin="0 5 0 5" x:Name="txbFLogin"/>
            <TextBlock Text="Пароль"
                       FontSize="15"/>
            <TextBox Margin="0 5 0 5" x:Name="txbPassword"/>
            <Button x:Name="btnReg"
                    Height="20"
                    Margin="6"
                    Click="btnReg_Click"
                    Content="Зарегистрироваться"/>
        </StackPanel>
    </Grid>
</Page>
